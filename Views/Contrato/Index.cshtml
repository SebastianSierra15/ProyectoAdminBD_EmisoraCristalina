@{
    ViewData["Title"] = "Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center" style="margin-top: 100px;">Contratos</h1>

<div class="container mt-5">
    <table class="table table-hover table-bordered table-responsive">
        <thead>
            <tr>
                <th scope="col" class="text-center">Id</th>
                <th scope="col" class="text-center">Nombre</th>
                <th scope="col" class="text-center">Vendedor</th>
                <th scope="col" class="text-center">Anunciante</th>
                <th scope="col" class="text-center">Fecha Inicio</th>
                <th scope="col" class="text-center">Fecha Fin</th>
                <th scope="col" class="text-center">Fecha Creación</th>
                <th scope="col" class="text-center">Contrato</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ContratoModel contrato in ViewBag.contratos)
            {
                <tr>
                    <th scope="row" class="text-center">@contrato.Id</th>
                    <th class="text-center">@contrato.Nombre</th>
                    <td class="text-center">@contrato.DocumentoVendedor</td>
                    <td class="text-center">@contrato.DocumentoAnunciante</td>
                    <td class="text-center">@contrato.FechaInicio</td>
                    <td class="text-center">@contrato.FechaFin</td>
                    <td class="text-center">@contrato.FechaCreacion</td>
                    <td class="text-center">
                        <form action="@Url.Action("DescargarPDF", "Contrato")" method="get">
                            <input type="hidden" name="id" value="@contrato.Pdf" />
                            <button class="btn" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="24" height="24">
                                    <path d="M64 464l48 0 0 48-48 0c-35.3 0-64-28.7-64-64L0 64C0 28.7 28.7 0 64 0L229.5 0c17 0 33.3 6.7 45.3 18.7l90.5 90.5c12 12 18.7 28.3 18.7 45.3L384 304l-48 0 0-144-80 0c-17.7 0-32-14.3-32-32l0-80L64 48c-8.8 0-16 7.2-16 16l0 384c0 8.8 7.2 16 16 16zM176 352l32 0c30.9 0 56 25.1 56 56s-25.1 56-56 56l-16 0 0 32c0 8.8-7.2 16-16 16s-16-7.2-16-16l0-48 0-80c0-8.8 7.2-16 16-16zm32 80c13.3 0 24-10.7 24-24s-10.7-24-24-24l-16 0 0 48 16 0zm96-80l32 0c26.5 0 48 21.5 48 48l0 64c0 26.5-21.5 48-48 48l-32 0c-8.8 0-16-7.2-16-16l0-128c0-8.8 7.2-16 16-16zm32 128c8.8 0 16-7.2 16-16l0-64c0-8.8-7.2-16-16-16l-16 0 0 96 16 0zm80-112c0-8.8 7.2-16 16-16l48 0c8.8 0 16 7.2 16 16s-7.2 16-16 16l-32 0 0 32 32 0c8.8 0 16 7.2 16 16s-7.2 16-16 16l-32 0 0 48c0 8.8-7.2 16-16 16s-16-7.2-16-16l0-64 0-64z" />
                                </svg>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a class="btn btn-success" id="contrato" href="@Url.Action("CrearContrato", "Contrato")">Crear Contrato</a>
</div>

