@{
    ViewData["Title"] = "Programas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .small-icon {
        width: 20px; /* Ajusta el tamaño del icono según tu preferencia */
        height: 20px;
        fill: currentColor; /* Esto mantendrá el color del icono igual al del texto circundante */
    }

    .modal-trigger-button {
        background: none; /* Quitamos el fondo del botón para que solo se muestre el icono */
        border: none;
        cursor: pointer;
        padding: 0; /* Quitamos el relleno del botón para que el icono se ajuste correctamente */
    }
</style>

<h1 class="text-center">Programas</h1>

<div class="container mt-5">
    <table class="table table-hover table-bordered table-responsive">
        <thead>
            <tr>
                <th scope="col" class="text-center">Id</th>
                <th scope="col" class="text-center">Nombre</th>
                <th scope="col" class="text-center">Estado</th>
                <th scope="col" class="text-center">Modificar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProgramaModel programa in ViewBag.programas)
            {
                <tr>
                    <th scope="row" class="text-center" value="@programa.Id">@programa.Id</th>
                    <td class="text-center">@programa.Nombre</td>
                    <td class="text-center">@((programa.Estado) ? "Activo" : "Inactivo")</td>
                    <td class="text-center">
                        <button class="modal-trigger-button" data-bs-toggle="modal" data-bs-target="#editar">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="small-icon">
                                <path d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152V424c0 48.6 39.4 88 88 88H360c48.6 0 88-39.4 88-88V312c0-13.3-10.7-24-24-24s-24 10.7-24 24V424c0 22.1-17.9 40-40 40H88c-22.1 0-40-17.9-40-40V152c0-22.1 17.9-40 40-40H200c13.3 0 24-10.7 24-24s-10.7-24-24-24H88z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <button class="btn btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#agregar">
        Agregar
    </button>
</div>

<div class="modal fade" id="editar" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog  modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fs-5 text-center">
                    Programa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form id="edit" action="@Url.Action("Editar", "Programa")" method="post">
                        <div class="row">
                            <div class="col">
                                <label for="id" class="form-label"><strong>Id</strong></label>
                                <input type="number" class="form-control" id="id" name="id" readonly>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <label for="nombre" class="form-label"><strong>Nombre</strong></label>
                                <input type="text" class="form-control" id="nombre" name="nombre" required>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <label for="estado" class="form-label"><strong>Estado</strong></label>
                                <select class="form-select" id="estado" name="estado" required>
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" form="edit" class="btn btn-success">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="agregar" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog  modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fs-5 text-center">
                    Programa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form id="crear" action="@Url.Action("Agregar", "Programa")" method="post">
                        <div class="row mt-3">
                            <div class="col">
                                <label for="nombre" class="form-label"><strong>Nombre</strong></label>
                                <input type="text" class="form-control" id="nombre" name="nombre" required>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" form="crear" class="btn btn-success">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

<script>
    var inputId = document.getElementById('id')
    var inputNombre = document.getElementById('nombre');
    var selectEstado = document.getElementById('estado');

    document.addEventListener("DOMContentLoaded", function () {
        var btnEditarList = document.querySelectorAll(".modal-trigger-button");

        btnEditarList.forEach(function (btnEditar) {
            btnEditar.addEventListener("click", function () {
                var fila = this.closest("tr");
                var id = fila.querySelector("th").textContent;
                var nombre = fila.querySelector("td:nth-child(2)").textContent;
                var estado = fila.querySelector("td:nth-child(3)").textContent;
                
                inputId.value = id;
                inputNombre.value = nombre;
                seleccionar(selectEstado, estado);
            });
        });
    });

    function seleccionar(s, texto) {
        let opc = s.options;
        for (let i = 0; i < opc.length; i++) {
            if (opc[i].textContent == texto) {
                opc[i].selected = true;
                break;
            }
        }
    };
</script>