<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>
        .small-icon {
            width: 20px;
            height: 20px;
            fill: currentColor;
        }

        .modal-trigger-button {
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.8) !important;
            transition: color 0.2s ease-in-out;
        }

            .nav-link:hover {
                color: #ffffff !important;
            }

        .dropdown-menu {
            background-color: #343a40;
        }

        .dropdown-item {
            color: #ffffff;
        }

            .dropdown-item:hover {
                background-color: #495057;
                color: #ffffff;
            }

        .navbar-brand img {
            filter: drop-shadow(0 1px 2px rgba(0,0,0,0.6));
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow fixed-top mb-3" style="background-color: #666666;">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="\Img\cristalina-caqueta.png" width="100px" />
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if (User.IsInRole("Gestionar Vendedor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Vendedor")">Vendedores</a>
                                </li>
                            }

                            if (User.IsInRole("Gestionar Anunciante"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Anunciante")">Anunciantes</a>
                                </li>
                            }

                            if (User.IsInRole("Gestionar Contrato"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Contrato")">Contratos</a>
                                </li>
                            }

                            if (User.IsInRole("Gestionar Programa"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Programa")">Programas</a>
                                </li>
                            }

                            if (User.IsInRole("Gestionar Programa"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Tarifa")">Tarifas</a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Perfil")">Perfil</a>
                        </li>
                    </ul>
                </div>
                <div class="dropdown ms-2">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                        <img src="\Img\user.png" width="35px" />
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Action("Salir", "Login")">Cerrar</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
